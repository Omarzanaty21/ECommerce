@model WEB.ViewModels.AdminViewModel

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ECommece | Dashboard Login</title>

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <link rel="stylesheet" href="~/Areas/dashboard/plugins/fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="~/Areas/dashboard/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <link rel="stylesheet" href="~/Areas/dashboard/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>ECommerce</b>.net</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      @if(ViewData["msg"] != null)
      {
          <p class="alert alert-danger">@ViewData["msg"]</p>
      }  
      <form action="" method="post">
        <div class="input-group mb-3">
          <input type="email" asp-for="Email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" asp-for="RememberMe" id="remember">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="~/Areas/dashboard/plugins/jquery/jquery.min.js"></script>
<script src="~/Areas/dashboard/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Areas/dashboard/dist/js/adminlte.min.js"></script>
</body>
</html>
