@model WEB.ViewModels.ShippingViewModel;
@{
    ViewData["Title"] = "Update Company";
}

<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h1>Edit Country</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="dashboard" asp-controller="Shipping" asp-action="index">Companies</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form method="post" asp-area="dashboard" asp-controller="Shipping" asp-action="Update">
                        <div class="card-body">
                            <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Company Name">
                            </div>
                            <div class="form-group">
                            <label>In Charge Name</label>
                            <input asp-for="InChargeName" type="text" class="form-control" placeholder="Person Name">
                            </div>
                            <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email Address">
                            </div>
                            <div class="form-group">
                            <label hidden>Lng</label>
                            <input value=" " hidden asp-for="Lng" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                            <label hidden>Lat</label>
                            <input value=" " hidden asp-for="Lat" type="text" class="form-control">
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                        </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</section>
            