@model List<WEB.ViewModels.CityCreateViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-area="dashboard" asp-controller="Cities" asp-action="Create">Create city now</a>
<div class="card-body">
            <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>City Name</th>
                      <th>Update</th>
                      <th style="width: 40px">Remove</th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach(var item in Model)
                    {
                         <tr>
                            <td>@item.Name</td>
                            <td>
                                <div class="btn btn-primary">
                                <a href="/dashboard/Cities/Update" style="width: 50%"></a>
                                </div>
                            </td>
                            <td>
                                <div class="btn btn-danger">
                                <a href="/dashboard/Cities/Remove" style="width: 50%">Remove</a>
                                </div>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>