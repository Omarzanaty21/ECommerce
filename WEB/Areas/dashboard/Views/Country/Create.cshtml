@model WEB.ViewModels.CountryCreateViewModel
@{
    ViewData["Title"] = "Create Country";
}

<form method="post" asp-controller="Country" asp-action="Create">
    <div class="card-body">
        <div class="form-group">
        <label asp-for="Name">Enter country name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" placeholder="">
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Create Country</button>
    </div>
</form>